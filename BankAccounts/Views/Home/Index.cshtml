@model User
s
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-center display-3">Register</h1>
</div>

<div class="container">
    <div class="row">
        <form asp-controller="users" asp-action="create" method="POST">
  <div class="col-md-6">
    <label asp-for="FirstName" class="form-label">First Name</label>
    <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
    <input asp-for="FirstName" class="form-control" />
  </div>


  <div class="col-md-6">
    <label asp-for="LastName" class="form-label">Last Name</label>
    <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
    <input class="form-control" asp-for="LastName" />
  </div>

  <div class="col-md-6">
    <label asp-for="Email" class="form-label">Email</label>
    <input class="form-control" asp-for="Email" />
  </div>

  <div class="col-md-6">
    <label asp-for="Password" class="form-label">Password</label>
    <input class="form-control" asp-for="Password" />
  </div>

  <div class="col-md-6">
    <label asp-for="PasswordConfirm" class="form-label">Confirm Password</label>
    <input class="form-control" asp-for="PasswordConfirm" />
  </div>

  <div class="col-6">
    <button class="btn-lg btn-primary mt-4 ml-4">Add User</button>
  </div>

</form>
    </div>
</div>

